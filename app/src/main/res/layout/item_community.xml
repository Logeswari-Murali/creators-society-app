<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/brand_0"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        android:background="@color/brand_0"
        android:padding="12dp"
        android:layout_marginBottom="5dp"
        android:foreground="?attr/selectableItemBackground">

        <!-- Community Image -->
        <androidx.cardview.widget.CardView
            android:id="@+id/img_Community"
            android:layout_width="50dp"
            android:layout_height="65dp"
            app:cardCornerRadius="7dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/imgCommunity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/visual_arts"/>
        </androidx.cardview.widget.CardView>

        <!-- Community Name -->
        <TextView
            android:id="@+id/tvCommunityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/img_Community"
            android:fontFamily="@font/montserrat_bold"
            android:text="Community Name"
            android:textColor="@color/brand_beige"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCommunityName"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/img_Community"
            android:fontFamily="@font/montserrat_bold"
            android:text="Chat and connect here"
            android:textColor="@color/grey"
            android:textSize="10sp" />

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="26dp"
            android:layout_marginEnd="1dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_rchevron"
            app:tint="@color/brand_beige" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
